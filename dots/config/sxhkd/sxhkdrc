###########################################################
# --------------------- BSPWM & SXKHD ------------------- #
###########################################################
# ==================================================  BSPWM
# ---------------------------------------------------------  Reload sxhkd
super + grave
    pkill -USR1 -x sxhkd && dunstify -r 1234 -t 1000 "sxhkd" "Reloaded âœ…"
# ---------------------------------------------------------  Refresh bspwm
ctrl + super + alt + Return
	bspc wm -r
# ---------------------------------------------------------  Btop++
super + alt + b
	st -e btop

###########################################################
# ------------------ Applications ----------------------- #
###########################################################
# ==============================================  MAIN APPS
# ---------------------------------------------------------  Terminal
super + Return
	st -c AlacrittyDefault
# ---------------------------------------------------------  Menu Apps
super + @space
	 ~/.config/rofi/files/launchers/type-1/launcher.sh
#     dmenu_run -i -b -p "Run:" -fn 'Monospace-10' -nb '#1e1e2e' -nf '#cdd6f4' -sb '#89b4fa' -sf '#1e1e2e'
# ---------------------------------------------------------  Browser
super + b
	brave
# ---------------------------------------------------------  Terminal
super + c
	thunar /etc/nixos
# ---------------------------------------------------------  Open Discord
super + d
	vesktop
# ------o---------------------------------------------------  thunar
super + f
	thunar
# ---------------------------------------------------------  Rmpc	
super + m
    st -c floating_rmpc -e rmpc
# ---------------------------------------------------------  AstroNvim
super + n
    st -e nvim
# ---------------------------------------------------------  Terminal
super + p
	st -c AlacrittyPinned
# ---------------------------------------------------------  Exit
super + q
	bspc node -c
###########################################################
# ---------------------- Workspaces --------------------- #
###########################################################
# =================================================== 1 - 9
# ---------------------------------------------------------  Swap workspace by arrow
super + {Left,Right}
	bspc desktop -f {prev,next}
# ------f--------------------------------------------------  Swap Workspace by number
super + {1-9,0}
    bspc desktop -f '^{1-9,10}'

# ================================================= POLYBAR
# ---------------------------------------------------------  Hide/Show Polibar
alt + {h,u}
	source ~/.local/bin/{hide,show}-polybar.sh


# =================================================== NODES
# ========================================== NAVIGATE NODES
# ---------------------------------------------------------  Move focused Node to spesific workspace
super + shift + {1-9,0}
	bspc node -d '^{1-9,10}'
# ---------------------------------------------------------  Move focused NOde to spesific worksapce by arrow
super + shift + {Left,Right}
	bspc node -d {prev,next} '--follow'
# ---------------------------------------------------------  Swap Focused Node
super + alt + {Left,Down,Up,Right}
	{ DIR=west FALLBACK=prev; , DIR=south; , DIR=north; , DIR=east FALLBACK=next; } \
	bspc node -f $DIR.!sticky.!hidden.local || bspc node -f $FALLBACK.leaf.!sticky.!hidden.local
# ---------------------------------------------------------  Swap Node
super + ctrl + {Left,Down,Up,Right}
	bspc node -s {west,south,north,east}.local
# ---------------------------------------------------------  Bring all Nodes to spesific workspace
#super + shift + a ; {1-9}
#    	bspc query -N -d {1-9} -n '.window' | xargs -I id -n 1 bspc node id -d focused
# ---------------------------------------------------------  Bring all Marked Node to focused workspace
#super + shift + m ; {1-9}
#    	bspc query -N -n '.marked' | xargs -I id -n 1 bspc node id -d focused --follow
# ---------------------------------------------------------  Increase / Deacrese Nodes
super + shift + {plus,minus}
	{ \
       bspc node -z top_right 20 -20 ; bspc node -z bottom_left -20 20; \
    ,  bspc node -z top_right -20 20 ; bspc node -z bottom_left 20 -20; \
    }

# ========================================== FLOATING NODES
# ---------------------------------------------------------  move floating window
ctrl + shift + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}
# ---------------------------------------------------------  Increase/decrease floating window
ctrl + shift + {plus,minus}
	{ \
	  xdotool getactivewindow windowmove --relative -- -50 -25 ; xdo resize -w +100 -h +50; \
	, xdotool getactivewindow windowmove --relative -- +50 +25 ; xdo resize -w -100 -h -50; \
	}

# ============================================== PLAY NODES
# ---------------------------------------------------------  NODE Display
super + shift + {a,d,w,s}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}
# ---------------------------------------------------------  NODE Status
super + shift + {m,n,c,p,h}
	bspc node -g {marked,locked,sticky,private,hidden}
# ---------------------------------------------------------  Toggle monocle <-> tiled
super + shift + t
	bspc desktop -l next
# ---------------------------------------------------------  Show NODE
super + shift + u
	bspc node $(bspc query -N -n .hidden.local.window | head -n1) --flag hidden=off
# ---------------------------------------------------------  NODE Transparensi
super + ctrl + minus
    picom-trans -c -3

super + ctrl + equal
    picom-trans -c +3

super + ctrl + 0
    picom-trans -c -d
# ---------------------------------------------------------  Rotate Node 90^
super + shift + Tab
	bspc node @/ --rotate 90
# ---------------------------------------------------------  CloSe/kill Nodes
super + {_,shift + }q
	bspc node -{c,k}
# ---------------------------------------------------------  Balance Nodes
super + shift + b
  bspc node @/ -B
# ---------------------------------------------------------  Control Direction
super + shift {Up,Down,Return}
	bspc node -p {east,south,cancel}
# ---------------------------------------------------------  Kill all Current nodes in workspace
super + ctrl + x
	bspc query -N -d | xargs -I id -n 1 bspc node id -c
# ---------------------------------------------------------  Focused the last node/desktop
alt + {Tab,period}
  bspc {node,desktop} -f last
# ---------------------------------------------------------  kill all unfocused nodes
super + shift + k ; {x,k}
    bspc query -N -n '.!focused.!marked.local.window' | xargs -I id -n 1 bspc node id {-c,-k}


# ==================================================  OTHER
# ---------------------------------------------------------  Brightness
XF86MonBrightnessUp
    sh ~/.local/bin/brightness.sh up

XF86MonBrightnessDown
    sh ~/.local/bin/brightness.sh down

# ---------------------------------------------------------  Volume
XF86AudioRaiseVolume
    sh ~/.local/bin/volume.sh --inc

XF86AudioLowerVolume
    sh ~/.local/bin/volume.sh --dec

XF86AudioMute
    sh ~/.local/bin/volume.sh --toggle

# ---------------------------------------------------------- Audio
XF86AudioNext
    sh ~/.local/bin/media.sh --next

XF86AudioPrev
    sh ~/.local/bin/media.sh --previous

XF86AudioPlay
    sh ~/.local/bin/media.sh --toggle

XF86AudioStop
    sh ~/.local/bin/media.sh --stop

# ----------------------------------------------------------- Thouchpad
XF86TouchpadToggle
    ~/.local/bin/toggle_touchpad.sh
